@model List<ApplicationUser>
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager;

<h2 class="text-center mb-5">List of Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@(user.FirstName + " " + user.LastName)</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @{
                        var role = await UserManager.GetRolesAsync(user);
                        var roleStr = String.Join(", ", role);


                        string color = "bg-secondary";
                        if(role.Contains("admin"))
                        {
                            color = "bg-danger";
                        }
                        else if(role.Contains("seller"))
                        {
                            color = "bg-warning text-dark";
                        }
                        else if(role.Contains("client"))
                        {
                            color = "bg-info text-dark";
                        }
                        <span class="badge rounded-pill @color">@roleStr</span>
                    }
                </td>
                <td>@user.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>